@model NWBA.ViewModels.CustomerViewModel
@{
    ViewData["Title"] = "Transactions";
}

<h1>Transactions</h1>

<form asp-action="IndexToViewOrders">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Account.AccountNumber" class="control-label"></label>
        <select asp-for="Account.AccountNumber" class="form-control" asp-items="Model.Accounts" id="accountDropDown"></select>
    </div>
    <div class="form-group">
        <input id ="buttonSubmit" type="submit" value="View" class="btn btn-primary" hidden />
    </div>
</form>

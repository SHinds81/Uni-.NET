@model NWBA.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Transfer";
}

<h1>Transfer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTransaction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.Type" class="control-label"></label>
                <select asp-for="Transaction.Type" class="form-control" asp-items="Model.TransactionTypes" id="typeSelection"></select>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.AccountNumber" class="control-label"></label>
                <select asp-for="Transaction.AccountNumber" class="form-control" asp-items="Model.Accounts"></select>
            </div>
            <div class="form-group" id="destinationNum" hidden>
                <label asp-for="Transaction.DestinationAccountNumber" class="control-label"></label>
                <input asp-for="Transaction.DestinationAccountNumber" class="form-control" />
                @Html.ValidationMessage("DestinationAccountNumber", new { @class = "text-danger" })
                <span asp-validation-for="Transaction.DestinationAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input asp-for="Transaction.Amount" class="form-control" />
                @Html.ValidationMessage("Amount", new { @class = "text-danger" })
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Comment" class="control-label"></label>
                <input asp-for="Transaction.Comment" class="form-control" />
                <span asp-validation-for="Transaction.Comment" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Transaction.TransactionTime" />
            <input type="hidden" asp-for="Transaction.ModifyTime" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}